<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.LoginPage">
    <StackLayout Background=" #127ac7"
                 VerticalOptions="Center"
                 Spacing="20">
        <Label Text="Welcome To Xamarin"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
        <Label Text="Cross-platform apps made easy" 
               FontSize="18"
               HorizontalOptions="Center"/>
        <Button HorizontalOptions="Fill" Text="Login" BackgroundColor=" #1dabf0"/>
        <Button HorizontalOptions="Fill" Text="Register" BackgroundColor=" #1dabf0"/>
    </StackLayout>
</ContentPage>